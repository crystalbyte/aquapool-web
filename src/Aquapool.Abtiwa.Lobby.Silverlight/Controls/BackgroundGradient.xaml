<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="Aquapool.Lobby.BackgroundGradient"
	d:DesignWidth="640" d:DesignHeight="480">
	<UserControl.Resources>
		<LinearGradientBrush x:Key="BackgroundGradient" EndPoint="1,0.5" StartPoint="0,0.5">
			<GradientStop Color="#FFFFFFFF"/>
			<GradientStop Color="#FF0A8CB9" Offset="1"/>
			<GradientStop Color="#FF0A8CB9" Offset="0.9130000114440918"/>
		</LinearGradientBrush>
	</UserControl.Resources>

	<Grid x:Name="LayoutRoot" Background="{StaticResource BackgroundGradient}"/>
</UserControl>