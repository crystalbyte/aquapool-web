    				</Canvas>
    			</controls:Viewbox>
    		</Grid>
    		<controls:Viewbox Margin="0,0,0,0" IsHitTestVisible="False" Grid.Column="3" Grid.ColumnSpan="1" Grid.Row="1" Grid.RowSpan="1">
    			<TextBlock Height="Auto" Width="Auto" FontFamily="Verdana" FontSize="11" FontWeight="Bold" Foreground="#FFFFFFFF" Text="BILDERGALERIE" TextWrapping="Wrap"/>
