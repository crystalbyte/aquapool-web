        <Border Grid.Row="10"
                Grid.Column="3"
                Grid.ColumnSpan="9"
                Background="{x:Null}"
                BorderBrush="#3EE8E8E8"
                BorderThickness="2,0,2,0">
            <Rectangle Width="Auto"
                       Height="Auto"
                       Fill="#FF85BF50"
                       Stroke="{x:Null}" />
        </Border>
        <controls:Viewbox Grid.Row="10"
                          Grid.Column="4"
                          Grid.ColumnSpan="4"
                          Height="Auto"
                          Margin="0,0,0,0"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch">
            <TextBlock Width="Auto"
                       HorizontalAlignment="Stretch"
                       VerticalAlignment="Stretch"
                       
                       FontSize="10"
                       FontStretch="Normal"
                       FontWeight="Thin"
                       Foreground="#FFFFFFFF"
                       RenderTransformOrigin="0.5,0.5"
                       Text="Oder nutzen Sie einfach unser Kontaktformular!"
                       TextWrapping="Wrap" />
        </controls:Viewbox>
        <Border Grid.Row="11"
                Grid.RowSpan="4"
                Grid.Column="3"
                Grid.ColumnSpan="9"
                Margin="0,0,0,0"
                BorderBrush="#3EE8E8E8"
                BorderThickness="2,0,2,0">
            <Grid x:Name="ContactForm"
                  Width="Auto"
                  Height="Auto"
                  Background="#FFFFFFFF">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.018*" />
                    <ColumnDefinition Width="0.203*" />
                    <ColumnDefinition Width="0.011*" />
                    <ColumnDefinition Width="0.153*" />
                    <ColumnDefinition Width="0.266*" />
                    <ColumnDefinition Width="0.04*" />
                    <ColumnDefinition Width="0.274*" />
                    <ColumnDefinition Width="0.035*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.038*" />
                    <RowDefinition Height="0.047*" />
                    <RowDefinition Height="0.047*" />
                    <RowDefinition Height="0.047*" />
                    <RowDefinition Height="0.044*" />
                    <RowDefinition Height="0.042*" />
                    <RowDefinition Height="0.282*" />
                    <RowDefinition Height="0.053*" />
                    <RowDefinition Height="0.061*" />
                    <RowDefinition Height="0.339*" />
                </Grid.RowDefinitions>
                <Grid x:Name="KeyValueLayer"
                      Grid.RowSpan="10"
                      Grid.Column="1"
                      Grid.ColumnSpan="1"
                      Margin="0,0,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.047*" />
                        <RowDefinition Height="0.24*" />
                        <RowDefinition Height="0.713*" />
                    </Grid.RowDefinitions>
                    <controls:Viewbox Grid.Row="1"
                                      Grid.RowSpan="1"
                                      Grid.Column="0"
                                      Margin="0,0,0,0">
                        <TextBlock x:Name="TextBlockKeys"
                                   Canvas.Left="0"
                                   Canvas.Top="0"
                                   Width="Auto"
                                   Height="Auto"
                                   
                                   FontSize="6.75"
                                   TextAlignment="Right"><Run Foreground="#FF0088B7" Text="*NAME:" /><Run Text=" " />
                            <LineBreak /><Run Text=" " />
                            <LineBreak /><Run Foreground="#FF0088B7" Text="FIRMA:" /><Run Text=" " />
                            <LineBreak /><Run Text=" " />
                            <LineBreak /><Run Foreground="#FF0088B7" Text="*E-MAIL-ADRESSE:" /><Run Text=" " />
                            <LineBreak /><Run Text=" " />
                            <LineBreak /><Run Foreground="#FF0088B7" Text="*BETREFF:" />
                            <LineBreak />
                            <LineBreak />
                            <LineBreak /><Run Foreground="#FF0088B7" Text="*NACHRICHT: " />
                        </TextBlock>
                    </controls:Viewbox>
                </Grid>
                <TextBox x:Name="TextBoxName"
                         Grid.Row="1"
                         Grid.Column="3"
                         Grid.ColumnSpan="2"
                         BorderThickness="0,0,0,1"
                         Cursor="None"
                         MouseEnter="TextBoxName_MouseEnter"
                         MouseLeave="TextBoxName_MouseLeave"
                         Text="{Binding Name,
                                        Mode=TwoWay}"
                         TextWrapping="Wrap" />
                <TextBox x:Name="TextBoxCompany"
                         Grid.Row="2"
                         Grid.Column="3"
                         Grid.ColumnSpan="2"
                         Margin="0,0,0,0"
                         BorderThickness="0,0,0,1"
                         MouseEnter="TextBoxCompany_MouseEnter"
                         MouseLeave="TextBoxCompany_MouseLeave"
                         Text="{Binding Company,
                                        Mode=TwoWay}"
                         TextWrapping="Wrap" />
                <TextBox x:Name="TextBoxEmail"
                         Grid.Row="3"
                         Grid.RowSpan="1"
                         Grid.Column="3"
                         Grid.ColumnSpan="2"
                         Margin="0,0,0,0"
                         BorderThickness="0,0,0,1"
                         MouseEnter="TextBoxEmail_MouseEnter"
                         MouseLeave="TextBoxEmail_MouseLeave"
                         Text="{Binding EmailAddress,
                                        Mode=TwoWay}"
                         TextWrapping="Wrap" />
                <TextBox x:Name="TextBoxSubject"
                         Grid.Row="4"
                         Grid.RowSpan="1"
                         Grid.Column="3"
                         Grid.ColumnSpan="2"
                         Margin="0,0,0,0"
                         BorderThickness="0,0,0,1"
                         MouseEnter="TextBoxSubject_MouseEnter"
                         MouseLeave="TextBoxSubject_MouseLeave"
                         Text="{Binding Subject,
                                        Mode=TwoWay}"
                         TextWrapping="Wrap" />
                <TextBox x:Name="TextBoxMessage"
                         Grid.Row="6"
                         Grid.Column="3"
                         Grid.ColumnSpan="2"
                         AcceptsReturn="True"
                         MouseEnter="TextBoxMessage_MouseEnter"
                         MouseLeave="TextBoxMessage_MouseLeave"
                         Text="{Binding Text,
                                        Mode=TwoWay}"
                         TextWrapping="Wrap" />
                <Grid x:Name="ReminderLayer"
                      Grid.Row="1"
                      Grid.Column="6"
                      Grid.ColumnSpan="1"
                      Margin="0,0,0,-3">
                    <controls:Viewbox Margin="0,0,0,0">
                        <TextBlock x:Name="TextBlockReminder"
                                   Canvas.Left="0"
                                   Canvas.Top="0"
                                   Width="Auto"
                                   Height="Auto"
                                   
                                   FontSize="6.75"
                                   FontStyle="Italic"><Run Foreground="#FF0088B7" Text="Die mit * gekennzeichneten " /><Run Text=" " />
                            <LineBreak /><Run Foreground="#FF0088B7" Text="Felder bitte ausfüllen!" />
                        </TextBlock>
                    </controls:Viewbox>
                </Grid>
                <Grid x:Name="ButtonSend"
                      Grid.Row="8"
                      Grid.Column="3">
                    <Button Grid.Row="11"
                            Grid.RowSpan="4"
                            Grid.Column="3"
                            Grid.ColumnSpan="8"
                            Click="OnButtonCommitClick"
                            FontSize="12"
                            Foreground="#FF0088B7">
                        Versenden
                    </Button>
                </Grid>
            </Grid>
        </Border>
        <Border x:Name="ContactOverlay"
                Grid.Row="11"
                Grid.RowSpan="4"
                Grid.Column="3"
                Grid.ColumnSpan="8"
                Background="White"
                Visibility="Collapsed">
            <TextBlock Width="300"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="12"
                       Foreground="#FF0088B7"
                       TextAlignment="Center">
                <Run>Vielen Dank für Ihre Anfrage.</Run>
                <LineBreak />
                <Run>Wir werden uns in Kürze bei Ihnen melden.</Run>
            </TextBlock>
        </Border>

    </Grid>
</UserControl>
