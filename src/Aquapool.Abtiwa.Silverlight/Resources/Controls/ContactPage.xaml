                                          Stretch="Fill">
                                        <Path.Fill>
                                            <LinearGradientBrush StartPoint="1.68161,1.09835" EndPoint="2.6808,1.09835">
                                                <LinearGradientBrush.RelativeTransform>
                                                    <TransformGroup>
                                                        <SkewTransform AngleX="0.025078" AngleY="0" CenterX="1.68161" CenterY="1.09835" />
                                                        <RotateTransform Angle="230.013" CenterX="1.68161" CenterY="1.09835" />
                                                    </TransformGroup>
                                                </LinearGradientBrush.RelativeTransform>
                                                <GradientStop Offset="0" Color="#FF5C8438" />
                                                <GradientStop Offset="0.482125" Color="#FF739B4F" />
                                                <GradientStop Offset="1" Color="#FF8AB266" />
                                            </LinearGradientBrush>
                                        </Path.Fill>
                                    </Path>
                                </Canvas>
                            </Canvas>
                        </controls:Viewbox>
                        <Path x:Name="Path_6"
                              Canvas.Left="8.34775"
                              Canvas.Top="12.2093"
                              Width="9.15121"
                              Height="4.5755"
                              Data="F1 M 15.2116,16.7848L 15.2116,14.9544L 8.34775,14.9544L 8.34775,14.0396L 15.2116,14.0396L 15.2116,12.2093L 17.499,14.4966L 15.2116,16.7848 Z "
                              Fill="#FFFFFFFF"
                              Stretch="Fill" />
                    </Canvas>
                </controls:Viewbox>
            </Grid>
        </Border>
        <Border Grid.Row="3"
                Grid.Column="3"
                Grid.ColumnSpan="9"
                Background="{x:Null}"
                BorderBrush="#3EE8E8E8"
                BorderThickness="2,0,2,0">
            <Rectangle Width="Auto"
                       Height="Auto"
                       Fill="#FF85BF50"
                       Stroke="{x:Null}" />
        </Border>
        <controls:Viewbox Grid.Row="3"
                          Grid.Column="4"
                          Grid.ColumnSpan="3"
                          Height="Auto"
                          Margin="0,0,0,0"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch">
            <TextBlock Width="Auto"
                       HorizontalAlignment="Stretch"
                       VerticalAlignment="Stretch"
                       
                       FontSize="10"
                       FontStretch="Normal"
                       FontWeight="Thin"
                       Foreground="#FFFFFFFF"
                       RenderTransformOrigin="0.5,0.5"
                       Text="Schreiben Sie uns, rufen Sie uns an,"
                       TextWrapping="Wrap" />
        </controls:Viewbox>
        <Border Grid.Row="4"
                Grid.RowSpan="6"
                Grid.Column="3"
                Grid.ColumnSpan="9"
                Background="#FFFFFFFF"
                BorderBrush="#3EE8E8E8"
                BorderThickness="2,0,2,0">
            <Grid Width="457" Height="116" />
        </Border>
        <Grid x:Name="Text1"
              Grid.Row="5"
              Grid.RowSpan="4"
              Grid.Column="4"
              Grid.ColumnSpan="1"
              Margin="0,0,0,0">
            <controls:Viewbox Margin="0,0,0,0">
                <TextBlock x:Name="TextBlock"
                           Canvas.Left="0"
                           Canvas.Top="0"
                           Width="Auto"
                           Height="Auto"
                           FontSize="6.5"><Run 
                         FontSize="7.5"
                         Foreground="#FF0088B7"
                         Text="AQUAPOOL WERLSEE" /><Run Text=" " />
                    <LineBreak /><Run Text=" " />
                    <LineBreak /><Run 
                         FontSize="6.75"
                         FontWeight="Bold"
                         Foreground="#FF4D4D4D"
                         Text="Anschrift:" /><Run Text=" " />
                    <LineBreak /><Run Text=" " />
                    <LineBreak /><Run 
                         FontSize="7.5"
                         Foreground="#FF4D4D4D"
                         Text="Werlseestraße 37" /><Run Text=" " />
                    <LineBreak /><Run 
                         FontSize="7.5"
                         Foreground="#FF4D4D4D"
                         Text="D-15537 Grünheide" /><Run Text=" " />
                    <LineBreak /><Run 
                         FontSize="7.5"
                         Foreground="#FF4D4D4D"
                         Text="OT Fangschleuse" />
                </TextBlock>
            </controls:Viewbox>
        </Grid>
        <Grid x:Name="Text3"
              Grid.Row="6"
              Grid.RowSpan="2"
              Grid.Column="9"
              Grid.ColumnSpan="1"
              Margin="0,0,0,0">
            <controls:Viewbox Height="Auto"
                              Margin="0,0,0,0"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch"
                              FontSize="9.5">
                <TextBlock Canvas.Left="0"
                           Canvas.Top="0"
                           FontSize="6.5"><Run 
                         FontSize="6.75"
                         FontWeight="Bold"
                         Foreground="#FF4D4D4D"
                         Text="Fax:" /><Run Text=" " />
                    <LineBreak /><Run Text=" " />
                    <LineBreak /><Run 
                         FontSize="6.75"
                         Foreground="#FF4D4D4D"
                         Text="+49 (0) 3362-23355" />
                </TextBlock>
            </controls:Viewbox>
        </Grid>
        <Grid x:Name="Text2"
              Grid.Row="6"
              Grid.RowSpan="2"
              Grid.Column="6"
              Grid.ColumnSpan="2"
              Margin="0,0,0,0">
            <controls:Viewbox Height="Auto"
                              Margin="0,0,0,0"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch"
                              FontSize="9.5">
                <TextBlock Canvas.Left="0"
                           Canvas.Top="0"
                           FontSize="6.5"><Run 
                         FontSize="6.75"
                         FontWeight="Bold"
                         Foreground="#FF4D4D4D"
                         Text="Telefon:" /><Run Text=" " />
                    <LineBreak /><Run Text=" " />
                    <LineBreak /><Run 
                         FontSize="6.75"
                         Foreground="#FF4D4D4D"
                         Text="+49 (0) 3362-23344" />
                </TextBlock>
            </controls:Viewbox>
        </Grid>
        <Border Grid.Row="10"
                Grid.Column="1"
                Margin="0,0,0,0"
                BorderThickness="2,0,0,0">
            <Grid Width="20" Height="20">
                <controls:Viewbox x:Name="Group1"
                                  Canvas.Left="0"
                                  Canvas.Top="1.52588e-005"
                                  Width="Auto"
                                  Height="Auto">
                    <Canvas Width="20" Height="20">
                        <Path x:Name="Path1"
                              Canvas.Left="0"
                              Canvas.Top="0"
                              Width="20"
                              Height="19.9912"
